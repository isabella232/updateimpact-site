@import "normalize.min.css"

$main-text-color = #3a4556;
$light-gray = #acacac;
$blue = #4583cf;

$orange = #fc7b5c;
$pink = #f66dc4; 
$green = #18c099; 
$yellow = #e6de5b;

body
  font-family: Proxima Nova, Helvetica Neue, Arial, sans-serif;
  font-size: 16px;
  line-height: 1.48;
  color: $main-text-color;
  font-weight: 300;
  
h1
  font-size: 1em;

h1, h2, h3, h4, h5
  line-height: 1.2;

.light-gray-text
  color: $light-gray;
  
.uppercase
  text-transform: uppercase;
  font-weight: 600;

.section
  padding: 2em 1em;
  text-align: center;
  
.text-orange
  color: $orange;
.text-pink
  color: $pink;
.text-blue
  color: $blue;
.text-green
  color: $green;
.text-yellow
  color: $yellow;

button,
.button
  border-radius: 2px;
  padding: 0.4em 0.6em;
  line-height: 1;
  color: white;
  font-weight: 300;
  vertical-align: middle;
  &.button-orange
    background-color: $orange;
    border: 1px solid $orange;
    transition: background-color 250ms;
    &:hover
      background-color: #fb624a;
  &.button-pink
    background-color: $pink;
    border: 1px solid $pink;
    transition: background-color 250ms;
    &:hover
      background-color: #f457b8;
  &.button-blue
    background-color: $blue;
    border: 1px solid $blue;
    transition: background-color 250ms;
    &:hover
      background-color: #376ac5;
  &.button-green
    background-color: $green;
    border: 1px solid $green;
    transition: background-color 250ms;
    &:hover
      background-color: #13b385;
  &.button-yellow
    background-color: $yellow;
    border: 1px solid $yellow;
    transition: background-color 250ms;
    &:hover
      background-color: #e1d749;
       
header
  padding: 1em;
  overflow: auto;
  text-align: center;
  & .logo
    display: inline-block;
    line-height: 1;
    margin-top: 0.05em;
    & img
      width: 115px;
  & a
    color: $main-text-color;
    &:hover
      color: $blue;

nav.main-menu
  margin-top: 0.5em;
  & ul
    list-style: none;
    padding: 0;
    margin: 0;
  & li 
    display: inline-block;
  & a
    text-decoration: none;
    font-size: 0.75em;
    padding: 0 0.5em;
    transition: color 250ms;
    display: inline-block;
    & img[title='twitter']
      width: 1.3em;
      margin-bottom: -2px;
        
section.hero
  background-image: url('images/mesh.png');
  background-size: 170%;
  background-repeat: no-repeat;
  background-position: center;
  & h1
    font-size: 1.3em;
    & span
      text-transform: initial;
      font-weight: 300;
      display: block;
  & .newsletter-form
    margin-top: 2em;
        
section.description
  background-color: #18c099;
  color: white;

section.features
  & div > img
    max-width: 70%;
    margin-bottom: 1em;
  & hr
    width: 80%;
    line-height: 1;
    border: none;
    border-top: 1px solid #dddddd;
  & .feature-item
    margin: 3em auto 2em;
  & button
    & img
      width: 15px;
      margin-right: 0.4em;
    
section.pricing
  background-color: $blue;
  color: white;
    
footer
  border-top: 1px solid #e7e7e7;
  background-color: #f7f7f7;
  color: #bdbdbd;
  overflow: auto;
  text-align: center;
  font-size: 0.75em;
  & a
    color: #bdbdbd;
    &:hover
      color: #9d9d9d;
  & .main-menu
    float: none;
    margin-top: 1em;
    
.newsletter-form
  padding-top: 1em;
  & input[type="email"]
    margin: 0;
    border: 1px solid #ababab;
    border-radius: 2px;
    padding: 0;
    box-sizing: border-box;
    font-size: 12px;
    padding: .3em .6em;
    vertical-align: top;
    height: 25px;
  & .button
    text-transform: uppercase;
    font-size: 12px;
    vertical-align: top;
    padding-top: 0.5em;
    margin-left: -2px;
    height: 25px;
  
